<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <blood.bear.test.view.ChipAIAnimationView
        android:id="@+id/aiView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="bottom"
        android:background="#66000000">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="COUNT"
                android:textColor="@android:color/white"
                android:textSize="10sp" />

            <SeekBar
                android:id="@+id/seekCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="30"
                android:progress="13" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="RADIUS"
                android:textColor="@android:color/white"
                android:textSize="10sp" />

            <SeekBar
                android:id="@+id/seekRadius"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100"
                android:progress="30" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="LINE WIDTH"
                android:textColor="@android:color/white"
                android:textSize="10sp" />

            <SeekBar
                android:id="@+id/seekLineWidth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="60"
                android:progress="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="ANIMATION LAT"
                android:textColor="@android:color/white"
                android:textSize="10sp" />

            <SeekBar
                android:id="@+id/seekAnimationLat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="50"
                android:progress="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="ANIMATION INTENSITY"
                android:textColor="@android:color/white"
                android:textSize="10sp" />

            <SeekBar
                android:id="@+id/seekAnimationIntensity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="10"
                android:progress="1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onColorNeurons"
                    android:text="Neuron"
                    android:textSize="10sp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onColorLines"
                    android:text="Lines"
                    android:textSize="10sp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onColorBG"
                    android:text="BG"
                    android:textSize="10sp" />


                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onAnimateClick"
                    android:text="Animate"
                    android:textSize="10sp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</FrameLayout>
